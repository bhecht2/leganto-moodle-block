{{!
    @template block_leganto/main

    This template renders the main content area for the Recently accessed courses block.

    Example context (json):
    {
        "coursecode": 1,
        "btnlabel": "",
    }
}}

<button class="btn btn-primary" id="init-leganto-btn">{{btnlabel}}</button>

<div style="display:none" id="block-leganto-{{uniqid}}">
    {{> block_leganto/placeholder }}
</div>

{{#js}}
require(
    [
        'jquery',
        'block_leganto/main'
    ],
    function(
        $,
        main
    ) {
        $('#init-leganto-btn').on('click', function() {
            var root = $('#block-leganto-{{uniqid}}');
            var button = $('#init-leganto-btn');
            button.toggle();
			root.toggle();
            
            var course = '{{coursecode}}';
            var noListAvailable = '{{nolistavailable}}';

            main.init(root, course, noListAvailable);
        });
    }
);
{{/js}}
