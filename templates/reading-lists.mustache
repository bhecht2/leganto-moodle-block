{{!
    @template block_leganto/reading-lists

    This template renders reading lists for the Leganto block.

    Example context (json):
    {
        "reading_lists": [
            {
                "link": "<a href="https://" target="_blank">Link</a>",
                "item_count": "(2 items)",
                "modified_date": ""
            }
        ]
    }
}}

{{#reading_lists}}
    <p>
        {{{link}}} {{{item_count}}}
        {{{modified_date}}}
    </p>
{{/reading_lists}}
